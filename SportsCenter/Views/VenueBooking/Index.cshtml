<script src="https://cdn.jsdelivr.net/npm/vue-good-wizard/dist/vue-good-wizard.js"></script>
<script src="https://unpkg.com/vuejs-datepicker"></script>
<div class="back_re">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2>場地預約</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .vdp-datepicker__calendar {
        width: 100%
    }

        .vdp-datepicker__calendar .cell.day-header {
            text-transform: uppercase;
            font-size: 17px;
            white-space: nowrap;
            cursor: inherit;
            border-bottom: 1px solid #a2a2a2;
            margin: 0px 0px;
            font-weight: 700;
        }


    .card {
        border: none;
        transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
        overflow: hidden;
        border-radius: 20px;
        min-height: 200px;
        box-shadow: 0 0 12px 0 rgba(0, 0, 0, 0.2);
    }

        .card.card-has-bg {
            transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
            background-size: 120%;
            background-repeat: no-repeat;
            background-position: center center;
        }

            .card.card-has-bg:before {
                content: "";
                position: absolute;
                top: 0;
                right: 0;
                bottom: 0;
                left: 0;
                background: inherit;
                -webkit-filter: grayscale(1);
                -moz-filter: grayscale(100%);
                -ms-filter: grayscale(100%);
                -o-filter: grayscale(100%);
                filter: grayscale(100%);
            }

            .card.card-has-bg:hover {
                transform: scale(0.98);
                box-shadow: 0 0 5px -2px rgba(0, 0, 0, 0.3);
                background-size: 130%;
                transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
            }

                .card.card-has-bg:hover .card-img-overlay {
                    transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
                    background: #234f6d;
                    background: linear-gradient(0deg, rgba(4, 69, 114, 0.5) 0%, #044572 100%);
                }

        .card .card-footer {
            background: none;
            border-top: none;
            display: none;
            width: 100%;
            position: fixed;
            bottom: 20px;
            width: 100%;
            text-align: center;
            left: 0px;
            right: 20px;
        }

    }

    .card .card-footer .media img {
        border: solid 3px rgba(255, 255, 255, 0.3);
    }

    .card .card-meta {
        color: #26bd75;
    }

    .card .card-body {
        transition: all 500ms cubic-bezier(0.19, 1, 0.22, 1);
    }

    .card:hover {
        cursor: pointer;
        transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
    }

        .card:hover .card-body {
            margin-top: 30px;
            transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
        }

        .card:hover .card-footer {
            display: block;
        }

    .card .card-img-overlay {
        transition: all 800ms cubic-bezier(0.19, 1, 0.22, 1);
        background: #234f6d;
        background: linear-gradient(0deg, rgba(35, 79, 109, 0.3785889356) 0%, #455f71 100%);
    }
</style>
<div class="container-fluid p-5">
    <div id="app">
        <vue-good-wizard :steps="steps"
                         :on-Next="nextClicked"
                         :on-Back="backClicked"
                         :previous-Step-Label="'上一步'"
                         :next-Step-Label="'下一步'"
                         :final-Step-Label="'完成預約'"
                            ref="my-wizard">
            <div slot="page1">
                <div class="row">
                    <div class="col-sm-12 col-md-6 col-lg-4 mb-4" v-for="item in listData.category">
                        <div class="card text-white card-has-bg click-col" v-bind:style="{ 'background-image': 'url(' + '/system/'+ encodeURI(item.path) + ')' }">
                            <div class="card-img-overlay d-flex flex-column">
                                <div class="card-body d-flex justify-content-center align-items-center">
                                    <h1 class="card-title mt-0 text-white ">{{item.name}}</h1>
                                </div>
                                <div class="card-footer">
                                    <div class="media">
                                        <button class="btn btn-primary w-100" @@click="selectCategory(item)">選擇</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>






            </div>
            <div slot="page2">
                <h4>Step 2</h4>
                <p>This is step 2</p>
            </div>
            <div slot="page3">
                <h4>Step 3</h4>
                <p>This is step 3</p>
                <vuejs-datepicker :inline="true"></vuejs-datepicker>

            </div>
            <div slot="page4">
                <h4>Step 4</h4>
                <p>This is step 4</p>
            </div>
        </vue-good-wizard>
    </div>
</div>

<script>
    let app = new Vue({
            el: '#app',
            components: {vuejsDatepicker},
            data: {
                steps: [
                    {label: '選擇運動項目',slot: 'page1'},
                    {label: '選擇場館',slot: 'page2',},
                    {label: '選擇預約時間',slot: 'page3',options: {}},
                    {label: '預約資訊',slot: 'page4',options: {nextDisabled: true}},
                ],
                selectItem:{
                    category:{}
                },
                listData:{
                    category:[],
                    venue:[]
                }
            },
            mounted:function(){
                this.getCategoryData();
                document.querySelector('.wizard__next').hidden = true;
                this.getVenueData();
            },
            methods: {
                selectCategory(category){
                    console.log(category);
                    this.selectItem.category = category;
                    this.$refs['my-wizard'].goNext(true);
                    document.querySelector('.wizard__next').hidden = false;
                },
                nextClicked(currentPage) {
                    console.log('next clicked', currentPage)
                    return true; //return false if you want to prevent moving to next page
                },
                backClicked(currentPage) {
                    console.log('back clicked', currentPage);
                    if(currentPage == 1) document.querySelector('.wizard__next').hidden = true;

                    return true; //return false if you want to prevent moving to previous page
                },
                getCategoryData(){
                    let self = this;
                    axios.get('/api/category/getall').then(res=> self.listData.category = res.data)                
                },
                getVenueData(){
                    let self = this;
                    axios.get('/api/Venue').then(res=> self.listData.venue = res.data)                
                }
            }
    })
</script>