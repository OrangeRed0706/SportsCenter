<script>

    var liuyan = document.getElementById("addMessage");
    var xinzen = document.getElementById("updateMsg");
    var textarea = document.getElementById("updatearea");
    var liuyan2 = document.getElementById("addMessage2");
    xinzen.addEventListener("click", xinzenadd);
    var index = 0;

    function xinzenadd(value) {
        var commentText = document.createElement("p");
        commentText.innerText = "匿名：" + textarea.value;
        commentText.id = "commentText" + index;
        liuyan2.append(commentText);

        var replyBtn = document.createElement("button");
        replyBtn.className = "btn btn-outline-success btn-sm";
        replyBtn.innerText = "回復";
        liuyan2.append(replyBtn);

        var modifyBtn = document.createElement("button");
        modifyBtn.className = "btn btn-outline-secondary btn-sm";
        modifyBtn.innerText = "修改";
        replyBtn.after(modifyBtn);

        var deleteBtn = document.createElement("button");
        deleteBtn.className = "btn btn-outline-danger btn-sm";
        deleteBtn.innerText = "刪除";
        modifyBtn.after(deleteBtn);

        replyBtn.onclick = function () {

            var Huifu = document.createElement("textarea");
            Huifu.placeholder = "回復給...";
            Huifu.className = "form-control";
            Huifu.style = "width: 600px;height: 180px;";
            deleteBtn.after(Huifu);

            var HuifuAnniu = document.createElement("button");
            HuifuAnniu.type = "submit";
            HuifuAnniu.className = "btn btn-outline-primary btn-sm";
            HuifuAnniu.innerText = "留言";
            Huifu.after(HuifuAnniu);

            HuifuAnniu.onclick = function () {

                var commentText1 = document.createElement("p");
                commentText1.innerText = "回復給...:" + Huifu.value;
                // commentText.id = "commentText" + index;
                deleteBtn.after(commentText1);
                HuifuAnniu.remove();
                Huifu.remove();
              

                var deleteBtn1 = document.createElement("button");
                deleteBtn1.className = "btn btn-outline-danger btn-sm";
                deleteBtn1.innerText = "刪除";
              
                commentText1.after(deleteBtn1);

                deleteBtn1.onclick = function () {
                  
                    deleteBtn1.previousElementSibling.remove();
                    deleteBtn1.remove();

                }
      

            };



        };


        modifyBtn.onclick = function () {
            //console.log(comment.id);
            replyBtn.style.display = "none";
            commentText.style.display = "none";
            modifyBtn.style.display = "none";
            deleteBtn.style.display = "none";

            var commentInput = document.createElement("input");
            commentInput.value = commentText.innerText;
            commentInput.className = "form-control";
            commentInput.style = "width: 600px";
            deleteBtn.after(commentInput);

            var submitBtn = document.createElement("button");
            submitBtn.className = "btn btn-outline-primary btn-sm";
            submitBtn.innerText = "送出";
            commentInput.after(submitBtn);
            submitBtn.onclick = function () {

                commentText.style.display = "block";
                replyBtn.style.display = "inline";
                modifyBtn.style.display = "inline";
                deleteBtn.style.display = "inline";
                commentText.innerText = commentInput.value;

                commentInput.remove();
                submitBtn.remove();
            };
        };

        deleteBtn.onclick = function () {
            deleteBtn.previousElementSibling.previousElementSibling.previousElementSibling.remove();
            deleteBtn.previousElementSibling.previousElementSibling.remove();
            deleteBtn.previousElementSibling.remove();
            deleteBtn.remove();
        }



        index++;
      
    }

</script>
