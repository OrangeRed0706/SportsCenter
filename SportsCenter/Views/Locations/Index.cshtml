@model IEnumerable<SportsCenter.DataAccess.Entity.Location>

@{
    ViewData["Title"] = "Index";
}

<h1>場館資訊</h1>




<div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4">
    <!--div class="row px-4 pt-4 justify-content-center"-->


    
@foreach (var item in Model)

{                       
                                 
                        <div class="col card shadow mb-5 d-flex align-items-stretch"> 
                        <!--div class="card h-100 shadow-sm rounded" style="width:15rem"-->
                            <!-- 照片-->
                            <img class="card-img-top" src="~/Jena/picture/@item.ImagePath" alt="..." asp-append-version="true" accept="image/*"/>
                            <!-- 資料-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!--名字-->
                                    <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.Name)</h5>
                                     <h6 class="fw-bolder">@Html.DisplayFor(modelItem => item.EnglishName) </h6>

                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center"><a class="btn btn-outline-success mt-auto" asp-action="Details"asp-route-id="@item.Id">詳細資訊</a></div>

                            </div>

            </div>
            }
                     

