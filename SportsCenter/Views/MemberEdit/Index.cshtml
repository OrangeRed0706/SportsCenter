<link href="https://cdn.staticfile.org/twitter-bootstrap/5.1.1/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.staticfile.org/twitter-bootstrap/5.1.1/js/bootstrap.bundle.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/vue@2.7.10/dist/vue.js"></script>
<link href="https://use.fontawesome.com/releases/v5.7.2/css/all.css" rel="stylesheet">
<script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<link href="~/david/css/memberedit.css" rel="stylesheet" />




<div class="container bootstrap snippets bootdey wrapper" id="Medit">
    <h1 class="text-primary">會員中心</h1>
    <hr>
    <div>
        <div class="row">
            <!-- left column -->
            <div class="col-md-3">
                <div class="text-center">
                    <img src="https://bootdey.com/img/Content/avatar/avatar7.png" class="avatar img-circle img-thumbnail" alt="avatar">
                    <h6>上傳圖片</h6>

                    <input type="file" class="form-control">
                </div>
            </div>

            <div class="col-2"></div>


            <!-- edit form column -->
            <div class="col-md-7 personal-info">
                <h3 style="color:aliceblue">會員基本資料</h3>

                <form>
                    <div >
                        <div class="form-group d-flex align-items-center">
                            <div class="icon"><span class="far fa-user"></span></div>
                            <input autocomplete="off" type="text" class="form-control" placeholder="Name">
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <div class="icon"><span class="far fa-envelope"></span></div>
                            <input autocomplete="off" type="email" class="form-control" placeholder="Email">
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <div class="icon"><span class="fas fa-phone"></span></div>
                            <input autocomplete="off" type="tel" class="form-control" placeholder="Phone">
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <div class="icon"><span class="fas fa-map-marker-alt"></span></div>
                            <input autocomplete="off" type="text" class="form-control" placeholder="City">
                        </div>
                        <div class="form-group d-flex align-items-center">
                            <div class="icon"><span class="far fa-user-circle"></span></div>
                            <input autocomplete="off" type="text" class="form-control" placeholder="Account">
                        </div>
                        <button type="button" @@click="AddToMember(SigninList)" class="btn btn-primary mb-3">完成</button>
                        <div>{{item.Member_Name}}</div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    let app = new Vue({
        el: "#Medit",
        data: {
            Member: []
        },
        mounted: function () {
            let self = this;
            fetch("/api/MemberEdit")
                .then(function (response) { return response.json() })
                .then(function (result) {
                    self.Member = result
                }
        }
    })
</script>